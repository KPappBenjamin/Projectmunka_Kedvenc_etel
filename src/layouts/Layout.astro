---
import { ViewTransitions } from 'astro:transitions';
import Navigation from '~/components/Navigation.astro';
import Footer from '~/components/Footer.astro';

import '../styles/globals.css';

const { path, title, description, keywords } = Astro.props as {
  path: string;
  title: string;
  description: string;
  keywords?: string;
};
---

<html lang="hu">
  <head>
    <ViewTransitions />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta name="author" content="Zétény Nagy" />
    <link rel="author" href="https://znagy.hu" />

    <meta name="author" content="Bottka Balázs" />
    <meta name="author" content="K.Papp Benjámin" />

    <meta
      name="keywords"
      content={`bmszc neumann jános informatikai technikum, njit, njszg, njszki, ikt, html, css, bootstrap, school, school project, food, favorite food, étel, kedvenc étel, recept, recipe${
        keywords ? `, ${keywords}` : ''
      }`}
    />

    <meta name="theme-color" content="#0d9488" />
    <meta name="color-scheme" content="light" />

    <meta property="og:locale" content="hu_HU" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Kedvenc ételek" />

    <meta name="application-name" content="Kedvenc ételek" />

    <meta name="robots" content="index, follow" />
    <meta
      name="googlebot"
      content="index, follow, max-video-preview:-1, max-image-preview:large, max-snippet:-1"
    />

    <title>{`${title} - Kedvenc ételek`}</title>
    <meta property="og:title" content={`${title} - Kedvenc ételek`} />
    <meta name="twitter:title" content={`${title} - Kedvenc ételek`} />

    <meta name="description" content={description} />
    <meta property="og:description" content={description} />
    <meta name="twitter:description" content={description} />

    <meta property="og:url" content={`kedvenc-etelek.znagy.hu${path}`} />

    <meta name="generator" content={Astro.generator} />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"></script>
  </head>

  <body>
    <div>
      <Navigation path={path} />
      <slot />
    </div>

    <Footer transition:persist />
  </body>
</html>
